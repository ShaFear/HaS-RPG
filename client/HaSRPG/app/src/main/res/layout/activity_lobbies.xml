<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jereczem.hasrpg.view.LobbiesActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.jereczem.hasrpg.view.LobbyFragment"
        android:id="@+id/fragment"
        android:layout_alignRight="@+id/select_characters_button"
        android:layout_alignEnd="@+id/select_characters_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/create_lobby_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_characters_button"
        android:id="@+id/select_characters_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectCharacters"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_lobby_button"
        android:id="@+id/create_lobby_button"
        android:layout_above="@+id/select_characters_button"
        android:layout_alignRight="@+id/select_characters_button"
        android:layout_alignEnd="@+id/select_characters_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="createNewLobby"/>
</RelativeLayout>
